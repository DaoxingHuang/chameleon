{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    // Set to true if you only want to emit declarations in a separate build step.
    "emitDeclarationOnly": true,
    // Place declarations under package dist/types for clearer package layout.
    "declarationDir": "dist/types",
    // Root input folder for this package's sources.
    "rootDir": "src",
    "outDir": "dist",
    // Use a package-scoped tsbuildinfo file (centralized cache is under root node_modules).
    "tsBuildInfoFile": "node_modules/.cache/plugins.tsbuildinfo",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@chameleon/core": [
        "../../core/src"
      ]
    }
  },
  // Include only package sources and local type helpers.
  "include": [
    "src/**/*"
  ],
  // Exclude build / generated / external folders.
  "exclude": [
    "node_modules",
    "dist",
    "packages/*/tests"
  ],
}